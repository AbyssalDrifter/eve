#!/bin/bash
# Usage:
#
#  source run_tests.sh <test ID> <root>
#
test=$1
base_path=`dirname $0`

if [[ "$#" -lt 2 ]]; then
  root_path=`pwd`
else
  root_path=$2
fi

for i in `ls ${root_path}/build`
do
  $base_path/run_test ${i} ${test} ${root_path}
done

