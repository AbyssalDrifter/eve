#!/bin/bash
#
# Usage:
#
#  source run_test.sh <build folder> <test ID> <root>
#
target=$1
test=$2

if [[ "$#" -lt 3 ]]; then
  root_path=`pwd`
else
  root_path=$3
fi

echo "test : ${test} on ${target} from ${root_path}"

echo "*******************************************"
cd $root_path/build/$target
ninja  $test.unit
ctest -R ^$test.*.unit
cd ${root_path}

